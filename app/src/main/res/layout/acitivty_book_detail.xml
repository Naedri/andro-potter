<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    app:cardBackgroundColor="@color/bg_white"
    app:cardCornerRadius="8dp"
    app:cardElevation="6dp"
    tools:context=".view.library.BookDetailActivity">
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <ImageView
            android:id="@+id/bookCover"
            android:layout_width="189dp"
            android:layout_height="258dp"
            app:srcCompat="@drawable/book1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="40sp"

            />

    <TextView
        android:id="@+id/bookPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15,00€"
        android:textSize="22sp"
        android:layout_below="@id/bookTitle"
        android:layout_alignEnd="@id/bookTitle"
        tools:layout_editor_absoluteX="316dp"
        tools:layout_editor_absoluteY="350dp" />

    <TextView
        android:id="@+id/bookTitle"
        android:layout_width="360dp"
        android:layout_height="57dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_below="@id/bookCover"
    android:layout_marginTop="10sp"
        android:text="Harry Potter à l'École des Sorciers"
        android:textSize="22sp"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="290dp" />


            <TextView
                android:id="@+id/bookSynopsis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/bookPrice"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:text="Harry Potter, un jeune orphelin, est élevé par son oncle et sa tante qui le détestent. Alors qu'il était haut comme trois pommes, ces derniers lui ont raconté que ses parents étaient morts dans un accident de voiture. Le jour de son onzième anniversaire, Harry reçoit la visite inattendue d'un homme gigantesque se nommant Rubeus Hagrid, et celui-ci lui révèle qu'il est en fait le fils de deux puissants magiciens et qu'il possède lui aussi d'extraordinaires pouvoirs."
                android:textColor="@color/black"
                android:textSize="20sp" />


</RelativeLayout>
    </ScrollView>
    </androidx.cardview.widget.CardView>