<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="160dp"
    android:layout_height="255dp"
    android:layout_margin="4dp"
    android:padding="4dp"
    app:cardBackgroundColor="@color/bg_white"
    app:cardCornerRadius="8dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="255dp">

        <ImageView
            android:id="@+id/bookCover"
            android:layout_width="90dp"
            android:layout_height="130dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="4dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/book1"></ImageView>

        <TextView
            android:id="@+id/bookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookCover"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Henri Potier à l'école des sorciers"></TextView>

        <TextView
            android:id="@+id/bookPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bookTitle"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="16sp"
            tools:text="35,00 €"></TextView>

        <Button
            android:id="@+id/buttonAddToCart"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_below="@id/bookPrice"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:background="@color/purple_500"
            android:text="Ajouter au panier"
            android:textColor="@color/white"
            android:textSize="11sp"
            tools:ignore="TouchTargetSizeCheck"></Button>
        />
    </RelativeLayout>
</androidx.cardview.widget.CardView>